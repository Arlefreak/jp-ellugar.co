h1
    margin 0 auto 20px auto
    font-size 2.0em
h2
    margin 0 auto 20px auto
    font-size 1.8em
h3
    margin 0 auto 20px auto
    font-size 1.6em
p
    margin auto
    font-size 1em
    hyphens auto
a
    color $colorFg

.wrapper
    width 90%
    display block
    margin auto

.social-wrapper
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.logo-wrapper
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

main
    width 100%
    height 100vh
    text-align center

.logo
    display block
    width 100%
    height auto
    max-width 200px
    margin auto

.social
    display flex
    font-size 1.2em
    flex-flow row wrap
    align-items center
    justify-content space-between
    width 100%
    max-width 100px
    margin 20px auto 0 auto
    li
        display block

.ellugar
    margin 2vh auto 0 auto
    color lighten($colorBg, 5)
    display block
    width 100%
